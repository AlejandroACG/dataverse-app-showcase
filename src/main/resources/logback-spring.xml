<?xml version="1.0" encoding="UTF-8"?>
    <configuration>
        <!-- Properties used to specify where logs are stored and the file name -->
        <property name="LOG_DIR" value="logs" />
        <property name="LOG_NAME" value="Dataverse-App-Showcase" />

        <!-- Configuration for console log output: Console appender -->
        <appender name="Console"
                  class="ch.qos.logback.core.ConsoleAppender">
            <layout class="ch.qos.logback.classic.PatternLayout">
                <!-- Log pattern formatting -->
                <Pattern>
                    %white(%d{ISO8601}) %highlight(%-5level) [%blue(%t)] %-60.60yellow(%C{20}): %msg%n%throwable
                </Pattern>
            </layout>
        </appender>

        <!-- Configuration for writing logs to a file: File Appender -->
        <appender name="RollingFile"
                  class="ch.qos.logback.core.rolling.RollingFileAppender">
            <file>${LOG_DIR}/${LOG_NAME}.log</file>
            <encoder
                    class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
                <Pattern>%d %p %C{1} [%t] %m%n</Pattern>
            </encoder>

            <!-- Log rotation policy: daily and when the file reaches 10 MB -->
            <rollingPolicy
                    class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
                <fileNamePattern>${LOG_DIR}/${LOG_NAME}-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
                <timeBasedFileNamingAndTriggeringPolicy
                        class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
                    <maxFileSize>10MB</maxFileSize>
                </timeBasedFileNamingAndTriggeringPolicy>
            </rollingPolicy>
        </appender>

        <!-- Define the log level and attach the appenders -->
        <root level="info">
            <appender-ref ref="RollingFile" />
            <appender-ref ref="Console" />
        </root>
    </configuration>
